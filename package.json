{
  "name": "effector-storage",
  "description": "Module for Effector to sync stores with localStorage or sessionStorage",
  "version": "2.0.1",
  "author": "Victor Didenko <yumaa.verdin@gmail.com> (https://yumaa.name)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yumauri/effector-storage"
  },
  "bugs": {
    "url": "https://github.com/yumauri/effector-storage/issues"
  },
  "homepage": "https://github.com/yumauri/effector-storage#readme",
  "keywords": [
    "effector",
    "persist",
    "localstorage",
    "local storage",
    "sessionstorage",
    "session storage"
  ],
  "main": "index.js",
  "scripts": {
    "build": "tsc && yarn size",
    "size": "size-limit",
    "//minify": "terser index.js -o index.min.js -c -m && terser sync/index.js -o sync/index.min.js -c -m",
    "//test": "jest --config jestconfig.json",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "clean": "rm -rf index.js index.d.ts sync/index.js sync/index.d.ts dual-publish-tmp",
    "dual-publish": "dual-publish --check && rm dual-publish-tmp/sync/index.ts",
    "release": "np --yolo --no-release-draft --contents ./dual-publish-tmp",
    "version": "yarn build"
  },
  "size-limit": [
    {
      "limit": "144 B",
      "path": "index.js"
    },
    {
      "limit": "223 B",
      "path": "sync/index.js"
    }
  ],
  "clean-publish": {
    "files": [
      "index.ts",
      "sync/index.ts",
      ".gitignore",
      "jestconfig.json",
      "tsconfig.json",
      "tslint.json"
    ],
    "fields": [
      "scripts"
    ],
    "packageManager": "yarn"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.5.4",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.23",
    "dual-publish": "^0.11.0",
    "effector": "^21.0.3",
    "jest": "^26.1.0",
    "np": "^6.3.2",
    "prettier": "^2.0.5",
    "size-limit": "^4.5.4",
    "ts-jest": "^26.1.2",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-security": "^1.16.0",
    "tslint-config-standard-plus": "^2.3.0",
    "typescript": "^3.9.6"
  },
  "peerDependencies": {
    "effector": "^20.0.0 || ^21.0.0"
  }
}
